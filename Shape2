#include <iostream>
#include <string>
#include <sstream>

using namespace std;

	
int main() {
	int c;
	
	cin >> c;
	int s = c - 1;
	
	for(int z=1;z<=c;z++){
		for ( int i = 1; i <= s; i++) {
			cout << " ";
		}
			for (int j = 1; j< z*2; j++) {
				cout << "*";

			}
			s--;
			cout << endl;
		}
	}

	



